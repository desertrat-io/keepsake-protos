parameters:
    level: 7

    checkGenericClassInNonGenericObjectType: false

    paths:
    - src
    - tests
    - examples

    ignoreErrors:
        -
            message: '#Parameter \#2 \$schema of static method [a-zA-Z0-9\\_]+::isValid\(\) expects .*, .* given#'
            path: %currentWorkingDirectory%/tests/Validation/*
        -
            message: '#Method [^ ]+ has parameter [^ ]+ with no type specified#'
            path: %currentWorkingDirectory%/
        -
            message: '#Method [^ ]+ has no return type specified#'
            path: %currentWorkingDirectory%/
        -
            message: '#Method [^ ]+ has parameter [^ ]+ with no value type specified in iterable type#'
            path: %currentWorkingDirectory%/
        -
            message: '#Method [^ ]+ return type has no value type specified in iterable type#'
            path: %currentWorkingDirectory%/
        -
            message: '#Property [^ ]+ type has no value type specified in iterable type#'
            path: %currentWorkingDirectory%/
        -
            message: '#Cannot use array destructuring on array\|false#'
            path: %currentWorkingDirectory%/
includes:
    - vendor/phpstan/phpstan-phpunit/extension.neon

