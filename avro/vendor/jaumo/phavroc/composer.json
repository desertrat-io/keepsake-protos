{
    "name": "jaumo/phavroc",
    "description": "Generate PHP classes from your Avro schema",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Jaumo",
            "email": "br@jaumo.com"
        }
    ],
    "minimum-stability": "stable",
    "bin": ["bin/phavroc"],
    "autoload": {
        "psr-4": {
            "Phavroc\\": "src/"
        }
    },
    "require": {
        "php": "^8.1",
        "symfony/console": "^5",
        "nikic/php-parser": "^4.14",
        "league/flysystem": "^1.0",
        "symfony/finder": "^5",
        "jaumo/avro": "^2.0@RC|^3.0",
      "ext-json": "*"
    },
    "require-dev": {
        "beberlei/assert": "^3.3.2",
        "behat/behat": "^3.5",
        "phpspec/php-diff": "^1.1",
        "phpstan/phpstan": "^0.12.99",
        "friendsofphp/php-cs-fixer": "^3"
    }
}
